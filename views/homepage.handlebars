{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5 post-header">
    <h2>
      <a class="title" href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p class="created">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p class="description">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
