<div class="row mb-4 post">
  <div class="col-md-5 post-header">
    <h2 class="title">{{title}}</h2>
    <p class="created">Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p class="description">
      {{description}}
    </p>
  </div>
</div>
{{#if comments.length}}
<div class="col-md-6 comment-list">
  <h3>{{currentUser}} Comments:</h3>
  {{#each comments as |comment|}}
  <div class="row mb-2 post">
    <div class="col-md-5 post-header">
      <p class="created">Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
    </div>
    <div class="col-md-7">
      <p class="description">
        {{comment.description}}
      </p>
    </div>    
  </div>
  {{/each}}
</div>
{{/if}}
{{#if logged_in}}  
<form class="form comment-form">
    <div class="form-group">
        <label for="comment">Comment</label>
        <input class="form-input" type="text" id="comment" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>

<script src="/js/comment.js"></script>
{{/if}}