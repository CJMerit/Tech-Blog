<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
{{#if comments.length}}
<div class="col-md-6 post-list">
  <h3>Comments:</h3>
  {{#each comments as |comment|}}
  <div class="row mb-2">
    <div class="col-md-5">
      <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    </div>
    <div class="col-md-7">
      <p>
        {{comment.description}}
      </p>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
{{#if logged_in}}  
<form class="form comment-form">
    <div class="form-group">
        <label for="comment">Comment</label>
        <input class="form-input" type="text" id="comment" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>

<script src="./js/comment.js"></script>
{{/if}}